<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grid.dao.DepartmentScoreDao">


    <select id="getTotalCharge" resultType="string" parameterType="com.grid.entity.QueryDepartmentScoreBean">
        SELECT sum(real_price) as totalCharge
        FROM charge
        <where>
            <if test="dateStart != null and dateStart != ''">AND create_time <![CDATA[>=]]> #{dateStart}</if>
            <if test="dateEnd != null and dateEnd != ''">AND create_time <![CDATA[<=]]> #{dateEnd}</if>
        </where>
    </select>

    <select id="getTotalTopup" resultType="string" parameterType="com.grid.entity.QueryDepartmentScoreBean">
        SELECT sum(amount) as totalTopup
        FROM topup
        <where>
            <if test="dateStart != null and dateStart != ''">AND create_time <![CDATA[>=]]> #{dateStart}</if>
            <if test="dateEnd != null and dateEnd != ''">AND create_time <![CDATA[<=]]> #{dateEnd}</if>
        </where>
    </select>

</mapper>

